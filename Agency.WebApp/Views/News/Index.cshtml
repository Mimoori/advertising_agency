@model IEnumerable<Article>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Descriptions</th>
            <th>Date and Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.title</td>
                <td>@item.descriptions</td>
                <td>@item.datetime</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id_news">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.id_news">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.id_news">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
