@model Article

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Article</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.title</dd>

        <dt class="col-sm-2">Descriptions</dt>
        <dd class="col-sm-10">@Model.descriptions</dd>

        <dt class="col-sm-2">Date and Time</dt>
        <dd class="col-sm-10">@Model.datetime</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="id_news" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
