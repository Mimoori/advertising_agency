@model Agency.WebApp.Models.Client

@{
    ViewData["Title"] = "Create";
}
<head>
    <script src="~/js/article.js" type="text/javascript"></script>
</head>

<h1>Create</h1>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id" class="control-label"></label>
                <input asp-for="id" class="form-control" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <!-- Descriptions Field (Now using a textarea for rich text editing) -->
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <textarea asp-for="name" class="form-control" rows="6"></textarea>
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="surname" class="control-label"></label>
                <textarea asp-for="surname" class="form-control" rows="6"></textarea>
                <span asp-validation-for="surname" class="text-danger"></span>
            </div>
            <!-- DateTime Field -->
            <div class="form-group">
                <label asp-for="phone" class="control-label"></label>
                <input asp-for="phone" type="date" class="form-control" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <textarea asp-for="email" class="form-control" rows="6"></textarea>
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="organization" class="control-label"></label>
                <textarea asp-for="organization" class="form-control" rows="6"></textarea>
                <span asp-validation-for="organization" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Initialize CKEditor
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>
}

